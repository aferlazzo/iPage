label /*to change the pointer to a hand on form fields that have labels*/
{ 
	font-weight: bold;
	cursor:pointer;
} 

input, select, textarea /* to make input boxes have a 2 pixel wide gray border */
{ 
 	border: 2px solid gray;	
 	background: #FFE4C4;
} 

#arfromemail,    /* equates to id=arfromemail for <input> tage */
#arreplytoemail,
#arbademail,
#aradminemail,
#arsubemail,
#popuname
{
	text-transform: lowercase;
}

input.radiogroup /* to make radio button's have a 0 pixel wide transparent backgrounds */
{border:none;background:transparent;} 

input.submit /* to make  buttons stand out more */
{ 
 	color: #fff;font-weight:bold;
	cursor:pointer;
 	background: #000080;
	font-family : Verdana, Geneva, Arial, Helvetica, sans-serif;
-moz-border-radius: 5px;  /* to use css3 to round button corners */
-webkit-border-radius: 5px;

} 
.MouseOver {font-weight:bold;color:#009;background:#fff;cursor:pointer;font-family : Verdana, Geneva, Arial, Helvetica, sans-serif;
-moz-border-radius: 5px;  /* to use css3 to round button corners */
-webkit-border-radius: 5px;
}
/* input#:hover { }*/

input.cancel /* to make cancel buttons stand out more */
{ 
 	color: #fff;font-weight:bold;
	cursor:pointer;
 	background: #939;
	font-family : Verdana, Geneva, Arial, Helvetica, sans-serif;
-moz-border-radius: 5px;  /* to use css3 to round button corners */
-webkit-border-radius: 5px;
} 

/* Note: IE on Windows doesn't support the :focus pseudo-class! */

input:focus /*makes the input field on which the user */
{				/*is currently focused gets a black border to make it stand out from the others.*/
	border: 2px solid #000080; 
} 

/* adds a css class for a  box on the left/right side columns */

input#CampaignButton
{
-moz-border-radius: 5px;  /* to use css3 to round button corners */
-webkit-border-radius: 5px;
}
body { padding:2px;
	color: #000080;
	font-family : Verdana, Arial, Helvetica, sans-serif;
	font-size:small;
	text-align:left;
	/*background-image:url("images/email.gif");*/
 	background: #FFE4C4;
	}
div, form, p, .Button, #navAlpha {margin:0;padding:0;top:0;bottom:0;}
h1 {
	margin:0 0 15px 0;
	padding:0;
	font-size: x-large;
	font-weight:900;
	}
content h1 {text-align:center;}
h2 {
	/*font:bold 12px/14px verdana, arial, helvetica, sans-serif;*/
	margin:0 0 5px 0;
	padding:0;
	font-size: large;
	font-weight:900;
	}
h3 {
	/*font:bold 12px/14px verdana, arial, helvetica, sans-serif;*/
	margin:0 0 5px 0;
	padding:0;
	font-size: medium;
	font-weight:900;
	}

p {
	/*font:10px/20px verdana, arial, helvetica, sans-serif;*/
	font-size: small;
	margin:0;
	padding:0;
	top:0;
	bottom:0;
	}
hr {margin:2px auto;padding:0;text-align:center;color:#000080;width:95%;height:1px;top:0;bottom:0;}
#Grow{font-size:150%;}
TD {
	/* color : #000080;*/
