}

#navAlpha, #navKappa {
position: relative;
z-index:5;
text-align:left;
margin:0;
background:transparent;
width:560px;
text-align:center;
height:70px;
}

#navKappa, #navKappa a{
font:8pt verdana, arial, helvetica, sans-serif;
}

#navKappaPadlock {
float:left;width:60px;margin:0 0 0 20px;padding:0;height:70px;background:transparent;}
#navKappaLinks {float:left;width:400px;height:54px;padding-top:16px;background:transparent;}
#navKappaLinks a {font-weight:bold;}
#navKappaStop {
float:left;width:50px;margin:0;padding:0;height:70px;text-align:left;background:transparent;}

#navAlpha h4
{
	font:14px verdana, arial, helvetica, sans-serif;
	color: #fff;	
}
#navAlpha p, #navAlpha u
{
	font:12px verdana, arial, helvetica, sans-serif;
	color: #fff;	
}
#navAlpha a {color:#fff;font-size:x-small;background:#004a8d}	
#navAlpha a:hover {color: #c06; background:#fff;}
	
body #navAlpha {width: 128px;}

