/* All the title boxes belong to the title class. */
.title {
display:none; /* makes div invisible by default */
clear:left;
width:558px; 
background-color: #000; /*#48d1cc;*/ 
background: url("../pr/images/PerfectResponseLogo.gif" );
background-repeat: no-repeat;
padding:0;
}

#Wrapper {
