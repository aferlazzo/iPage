label /*to change the pointer to a hand on form fields that have labels*/
{ 
	font-weight: bold;
	cursor:pointer;
} 

input, select, textarea /* to make input boxes have a 2 pixel wide gray border */
{ 
 	border: 2px solid gray;	
 	background: #FFE4C4;
} 

#arfromemail,    /* equates to id=arfromemail for <input> tage */
#arreplytoemail,
#arbademail,
#aradminemail,
#arsubemail,
#popuname
{
	text-transform: lowercase;
}

input.radiogroup /* to make radio button's have a 0 pixel wide transparent backgrounds */
{border:none;background:transparent;} 

input.submit /* to make  buttons stand out more */
{ 
 	color: #fff;font-weight:bold;
	cursor:pointer;
 	background: #000080;
	font-family : Verdana, Geneva, Arial, Helvetica, sans-serif;
} 
.MouseOver {font-weight:bold;color:#009;background:#fff;cursor:pointer;font-family : Verdana, Geneva, Arial, Helvetica, sans-serif;}
/* input#:hover { }*/

input.cancel /* to make cancel buttons stand out more */
{ 
 	color: #fff;font-weight:bold;
	cursor:pointer;
 	background: #939;
	font-family : Verdana, Geneva, Arial, Helvetica, sans-serif;
} 

/* Note: IE on Windows doesn't support the :focus pseudo-class! */

input:focus /*makes the input field on which the user */
{				/*is currently focused gets a black border to make it stand out from the others.*/
	border: 2px solid #000080; 
} 

/* adds a css class for a  box on the left/right side columns */


