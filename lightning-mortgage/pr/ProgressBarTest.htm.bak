<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>
<title>Untitled</title>
<style type="text/css">
div#ProgressBarOutline {margin:0;padding:0;height:30px;width:600px;top:8px;background:#ccc;border:2px solid #000080;}
div#ProgressBar {position:relative;margin:0;padding:0;height:30px;background:#000080;width:0;}
</style>
<script type='text/javascript'>
<!--
// function arguments: current count, total count, pixels in bar
function ProgressBar(Count, Total, TotalLength)
{
	var VisibleLength = (Count /Total) * TotalLength;
	var Bar = document.getElementById('ProgressBar');
	Bar.style.width=VisibleLength+"px";
	alert('Count: '+Count+' Total: '+Total+'\nlength in pixels: '+TotalLength+' VisibleLength: '+VisibleLength);
}
//-->
</script>
</head>
<body>
<div id='ProgressBarOutline'><div id='ProgressBar'></div></div>

<script type='text/javascript'>ProgressBar(0, 200, 600);</script>
<script type='text/javascript'>ProgressBar(10, 200, 600);</script>
<script type='text/javascript'>ProgressBar(50, 200, 600);</script>
<script type='text/javascript'>ProgressBar(100, 200, 600);</script>
<script type='text/javascript'>ProgressBar(150, 200, 600);</script>
<script type='text/javascript'>ProgressBar(200, 200, 600);</script>

</body>
</html>
